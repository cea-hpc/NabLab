module DepthInit;

with BathyLib.*;

itemtypes { cell, node }

connectivity cells: → {cell};
connectivity nodes: → {node};

def two: → ℝ, () → return 2.0;

let ℝ t = 0.0;

option ℝ maxTime = 0.1;
option ℕ maxIter = 500;
option ℝ δt = 1.0;

ℝ[2] X{nodes};
ℝ η{cells};

InitFromFile: ∀j∈cells(), η{j} = two() * nextWaveHeight();
